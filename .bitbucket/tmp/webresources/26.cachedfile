/* module-key = 'com.atlassian.bitbucket.server.bitbucket-web:paged-table', location = '/static/bitbucket/internal/widget/paged-table/paged-table.less' */
@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.paged-table-filter {
  background-color: #f5f5f5;
  border: solid #ccc;
  border-width: 1px 0;
}
.paged-table-filter > .aui-item {
  padding: 5px 10px;
}
.paged-table-filter-input {
  box-sizing: border-box;
  background-clip: padding-box;
  border-radius: 3px;
  box-shadow: inset 0 1px 3px #ccc;
  background: white url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAANCAYAAABy6+R8AAAAb0lEQVR42p2RMQ7AIAhFWXsG1h7Gtffo6urqyJGpwyetomnwJ38BH/wgfZSaS7PABbVOqkqm3Fzx6IQTatlDb5PJi21YBy1iuNgjJIgzFXqyCcXj1Z1DXNGTiw01aP252DCCgH7Fk41h8KaAGMDxADnaOPucd/m3AAAAAElFTkSuQmCC) no-repeat 7px 7px;
  border: 1px solid #bbb;
  font-family: Arial, FreeSans, Helvetica, sans-serif;
  font-size: 14px;
  height: 30px;
  padding: 5px;
  padding-left: 25px;
  width: 300px;
}
.paged-table-message {
  color: #999;
  padding: 10px;
  text-align: center;
}
.paged-table.no-rows {
  display: none;
}
.paged-table ~ .spinner {
  width: 48px;
  height: 48px;
  margin: 20px auto;
}
.paged-table tr td:first-child {
  border-left: 2px solid transparent;
}
.paged-table tr.focused {
  background-color: #f5f5f5;
}
.paged-table tr.focused td:first-child {
  border-left-color: #3b73af;
}
.paged-table tr.focused a:focus {
  outline: none;
  text-decoration: none;
}

/* module-key = 'com.atlassian.bitbucket.server.bitbucket-web:user-table', location = '/static/bitbucket/internal/feature/user/user-table/user-table.less' */
@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.user-table {
  overflow-x: auto;
}
.user-table .user-avatar {
  margin-right: 10px;
}
.user-table #actions {
  width: 16px;
}
.user-table td {
  white-space: nowrap;
}
.user-table td[headers=fullname] > .avatar-with-name > a,
.user-table td[headers=username] > div,
.user-table td[headers=lastAuthenticated] > div,
.user-table td[headers=email] > div {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: inline-block;
  max-width: 180px;
  vertical-align: middle;
}

/* module-key = 'com.atlassian.bitbucket.server.bitbucket-web:submit-spinner', location = '/static/bitbucket/internal/widget/submit-spinner/submit-spinner.less' */
@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.submit-spinner {
  display: inline-block;
  width: 16px;
  margin: 10px 10px 0 -5px;
  /* match 10px on buttons, move closer to the submit button though (-5px)*/
  vertical-align: top;
}
.dialog-button-panel .submit-spinner {
  margin-top: 15px;
}
.aui-dialog2-footer-actions .submit-spinner {
  margin-top: 0;
  vertical-align: middle;
}
